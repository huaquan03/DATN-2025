<property>
  <name>yarn.log-aggregation-enable</name><value>true</value>
</property>
<property>
  <name>yarn.log.server.url</name>
  <value>http://resourcemanager:19888/jobhistory/logs/</value>
</property>
  <property>
    <name>yarn.nodemanager.vmem-check-enabled</name>
    <value>false</value>
  </property>
  <!-- Cho phép log-aggregation -->
  <property>
    <name>yarn.log-aggregation-enable</name>
    <value>true</value>
  </property>

  <!-- Nơi NodeManager sẽ đẩy log lên HDFS -->
  <property>
    <name>yarn.nodemanager.remote-app-log-dir</name>
    <value>/tmp/logs</value>
  </property>

  <!-- Hostname của ResourceManager trong Docker network -->
  <property>
    <name>yarn.resourcemanager.hostname</name>
    <value>resourcemanager</value>
  </property>
  <!-- ResourceManager bind lên mọi interface -->
  <property>
    <name>yarn.resourcemanager.bind-host</name>
    <value>0.0.0.0</value>
  </property>

  <!-- NodeManager bind lên mọi interface -->
  <property>
    <name>yarn.nodemanager.bind-host</name>
    <value>0.0.0.0</value>
  </property>

  <property>
    <name>yarn.timeline-service.bind-host</name>
    <value>0.0.0.0</value>
  </property>

  <property>
    <name>yarn.resourcemanager.address</name>
    <value>resourcemanager:8032</value>
  </property>

  <!--  Scheduler RPC của RM -->
  <property>
    <name>yarn.resourcemanager.scheduler.address</name>
    <value>resourcemanager:8030</value>
  </property>

  <!--  ResourceTracker RPC (NM gửi heartbeat) -->
  <property>
    <name>yarn.resourcemanager.resource-tracker.address</name>
    <value>resourcemanager:8031</value>
  </property>

  <!--  Web UI ResourceManager -->
  <property>
    <name>yarn.resourcemanager.webapp.address</name>
    <value>resourcemanager:8088</value>
  </property>

